{% extends 'base.html.twig' %}



{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-8">

            </div>
            <div class="col-md-4">
                <h1 class="text-info" style="text-transform: capitalize;">
                    {{ property.title }}
                </h1>
                <h3>{{ property.rooms }} pièces - {{ property.surface }} m²</h3>
                <div class="text-info" style="font-size: 3rem; font-weight:bold ;">{{ property.formatedPrice }}</div>
                <a href="#" class="btn btn-primary">Contecter l'agence</a>
            </div>
        </div>
        <p>{{ property.description | nl2br }}</p>

        <div class="row">
            <div class="col-md-8">
                <h2 class="text-warning" >Caractéristiques</h2>
                <table class="table table-striped">
                    <tr>
                        <td>Surface habitable</td>
                        <td>{{ property.surface }} m²</td>
                    </tr>
                    <tr>
                        <td>Nombre de Pièces</td>
                        <td>{{ property.rooms }}</td>
                    </tr>
                    <tr>
                        <td>Chambres</td>
                        <td>{{ property.bedrooms }}</td>
                    </tr>
                    <tr>
                        <td>Chauffage</td>
                        <td style="text-transform: capitalize;">{{ property.heatType }}</td>
                    </tr>
                    <tr>
                        <td style="text-transform: capitalize;">étage</td>
                        <td>{{ property.floor }}</td>
                    </tr>
                </table>
            </div>
            <div class="col-md-4">
                <h2 class="text-warning">Spécificités</h2>
            </div>
        </div>
    </div>
    

{% endblock %}